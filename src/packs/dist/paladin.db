{"type":"String","label":"5th Level Spell","value":null},"spellLevel7":{"type":"String","label":"7th Level Spell","value":null},"spellLevel9":{"type":"String","label":"9th Level Spell","value":null},"spellChain":{"type":"String","label":"Chain Spell","value":null},"breathWeapon":{"type":"String","label":"Breath Weapon","value":null},"recharge":{"type":"Number","label":"Recharge","value":0},"quantity":{"type":"Number","label":"Uses","value":2},"maxQuantity":{"type":"Number","label":"Uses","value":2},"feats":{"adventurer":{"description":{"type":"String","label":"Adventurer Feat","value":"<p>Add [[2*@cha.mod]] to the healing provided by Lay on Hands.</p>"},"isActive":{"type":"Boolean","label":"Active"}},"champion":{"description":{"type":"String","label":"Champion Feat","value":"<p>Lay on Hands healing uses a free recovery instead of one of your own.</p>"},"isActive":{"type":"Boolean","label":"Active"}},"epic":{"description":{"type":"String","label":"Epic Feat","value":"<p>You can now use Lay on Hands four times per day instead of two.</p>"},"isActive":{"type":"Boolean","label":"Active"}}}},"flags":{},"img":"icons/svg/mystery-man.svg","_id":"bhnn7EQy6aA1tFbm"}
